<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/video_manager/db" VERSION="20170316" COMMENT="XMLDB file for Moodle blocks/video_manager"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="video_manager_categories" COMMENT="Categorias de vídeos">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="parentid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="comment"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="parentid" UNIQUE="false" FIELDS="parentid"/>
      </INDEXES>
    </TABLE>
     <TABLE NAME="video_manager_videos" COMMENT="Vídeos">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="categoryid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="video_id" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="url_video" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="url_thumb" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="status" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="deleted" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="categoryid" TYPE="foreign" FIELDS="categoryid" REFTABLE="video_manager_categories" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="categoryid" UNIQUE="false" FIELDS="categoryid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>